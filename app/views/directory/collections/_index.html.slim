script#collections type='text/ng-template'
  button.btn data-toggle='modal' href='#newCollectionModal' Create new collection

  #newCollectionModal.modal.hide.fade role='dialog' ng-controller='CollectionFormCtrl'
    .modal-header
      button.close data-dismiss='modal' Ã—
      h3 Create new collection
    .modal-body
      form
        fieldset
          label
            | Title
            input ng-model='collection.title'
          label
            | Desc
            input ng-model='collection.description'
    .modal-footer
      button.btn Close
      button.btn.btn-primary ng-click='submit()' data-dismiss='modal' Save

  table.table.table-striped
    thead
      tr
    tfoot
      tr
    tbody
      tr
        th ID
        th Title
        th Description
      tr ng-repeat='collection in collections'
        td {{collection.id}}
        td
          a ng-href='/collections/{{collection.id}}' {{collection.title}}
        td {{collection.description}}
